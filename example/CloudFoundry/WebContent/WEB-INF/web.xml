<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>Minimal-J Examples</display-name>
	<servlet>
		<servlet-name>DemoServlet</servlet-name>
		<servlet-class>org.minimalj.example.demo.DemoServlet</servlet-class>

		<init-param>
			<description>Minimal-J application class to start</description>
			<param-name>Application</param-name>
			<param-value>org.minimalj.example.demo.DemoApplication</param-value>
		</init-param>
		
		<init-param>
			<description>The web front end should us WebSocket for communication</description>
			<param-name>MjUseWebSocket</param-name>
			<param-value>false</param-value>
		</init-param>		

		<init-param>
			<param-name>MjDemoMode</param-name>
			<param-value>true</param-value>
		</init-param>		
	</servlet>
	<servlet-mapping>
		<servlet-name>DemoServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
</web-app>